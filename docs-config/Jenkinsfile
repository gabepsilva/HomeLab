pipeline {
    agent any

    environment {
        registry = "ghcr.io/gabrielpsilva/homelab-docs:${env.BUILD_NUMBER}"
        registryCredential = 'gab-90d'
        dockerImage = ''
    }
    

    stages{

        stage('Build Docs') {

            steps {
                script {
                    dockerImage = docker.build(registry, "-f docker/db/Dockerfile .")
                }
                //sh 'docker build  -f docs-config/Dockerfile -t ghcr.io/gabrielpsilva/homelab-docs .'
            }
        }

        stage('Push image') {
            steps{
                script{
                    docker.withRegistry(registry, registryCredential) {
                        dockerImage.push()
                    }
                }
            }
        }

    }
}
