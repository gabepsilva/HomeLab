pipeline {
    agent any

    environment {
        registry = "ghcr.io/gabrielpsilva/homelab-docs"
    }
    
    stages{

        stage('Build Docs') {

            steps {
                sh "docker build -f docs-config/Dockerfile -t ${registry} ."
            }
        }

        stage('Push image') {
            steps{

                withCredentials([usernamePassword(credentialsId: 'gh-90', passwordVariable: 'ghuserpass', usernameVariable: 'ghuser')]) {
                    //sh 'echo $ghuserpass | docker login -u $ghuser --password-stdin https://$registry'
                    sh '''
                        mkdir ./docker
                        echo "{\"credHelpers\": {\"$registry\": \"\"}}" > ./docker/config.json
                        echo $ghuserpass | docker --config ./docker/ login -u $ghuser --password-stdin  https://$registry
                    '''
                }

                sh "docker push ${registry}"
            }
        }

        stage('Deploy') {
            steps{

                echo "TODO"

                /*
                    enable this after vault installation and creation of a service account with credentials saved in vault

                    
                sh "sshpass -p PASS \
                    ssh user_name@hostmachine 'docker run --rm -d --name HomeLabDocs -p 8081:80 ghcr.io/gabrielpsilva/homelab-docs'"

                */
            }
        }
    }
    post {
        // Clean after build
        always {
            cleanWs deleteDirs: true
        }
    }
}
